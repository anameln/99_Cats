<h1>Rent a cat!</h1>

<form action="<%=cat_rental_requests_url%>" method="post">
  <label for="cat_selector">Choose a cat!!! :)</label>
  <select name="cat_rental_request[cat_id]" id="cat_selector">
    <% Cat.all.each do |cat| %>
      <option value="<%=cat.id%>" <%= "selected" if cat.id = @request.cat_id %> >
        <%= cat.name %>
      </option>
    <% end %>
  </select>
  <br>


  <label for="start_date">Start date</label>
  <input name="cat_rental_request[start_date]" type="date" value="<%= @request.start_date %>" id="start_date">
  <br>
  <label for="end_date">End date</label>
  <input name="cat_rental_request[end_date]" type="date" value="<%= @request.end_date %>" id="end_date">
  <br>
  <button>Rent this one</button>
</form>
